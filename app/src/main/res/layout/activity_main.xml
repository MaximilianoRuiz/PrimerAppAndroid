<android.support.v4.widget.SlidingPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_pane_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="300dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imageView2"
            android:layout_gravity="left"
            android:background="@mipmap/snorlax"/>

        <ListView
            android:id="@+id/left_pane"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="#ff267d9d"
            android:choiceMode="singleChoice"
            android:divider="#005875"
            android:dividerHeight="2dp"
            android:layout_gravity="left" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TabHost android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TabWidget android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@android:id/tabs" />

                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@android:id/tabcontent" >

                    <RelativeLayout android:id="@+id/tab1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ff9bc3dc"
                        android:weightSum="1">

                        <TextView android:id="@+id/textView1"
                            android:text="Contenido Tab 1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ListView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/listView1"
                            android:layout_below="@+id/textView1"
                            android:divider="#00ffb8cb"/>

                        <Button
                            android:layout_width="47dp"
                            android:layout_height="45dp"
                            android:background="@drawable/btn_circle"
                            android:text="%"
                            android:layout_gravity="right"
                            android:textSize="30dp"
                            android:layout_below="@+id/listView1"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:nestedScrollingEnabled="false"
                            android:onClick="waitingToast"/>

                        <Button
                            android:layout_width="47dp"
                            android:layout_height="45dp"
                            android:background="@drawable/btn_circle"
                            android:text="+"
                            android:textSize="30dp"
                            android:layout_gravity="left"
                            android:layout_below="@+id/listView1"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:onClick="addDayDialog"/>

                    </RelativeLayout>

                    <RelativeLayout android:id="@+id/tab2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ff9bc3dc" >

                        <TextView android:id="@+id/textView2"
                            android:text="Contenido Tab 2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ListView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/listView2"
                            android:layout_below="@+id/textView2"
                            android:divider="#00ffb8cb"/>

                        <Button
                            android:layout_width="47dp"
                            android:layout_height="45dp"
                            android:background="@drawable/btn_circle"
                            android:text="%"
                            android:layout_gravity="right"
                            android:textSize="30dp"
                            android:layout_below="@+id/listView2"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:nestedScrollingEnabled="false"
                            android:onClick="waitingToast"/>

                        <Button
                            android:layout_width="47dp"
                            android:layout_height="45dp"
                            android:background="@drawable/btn_circle"
                            android:text="+"
                            android:textSize="30dp"
                            android:layout_gravity="left"
                            android:layout_below="@+id/listView2"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:onClick="addWeekDialog"/>
                    </RelativeLayout>

                    <RelativeLayout android:id="@+id/tab3"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ff9bc3dc" >

                        <TextView android:id="@+id/textView3"
                            android:text="Contenido Tab 3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ListView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/listView3"
                            android:layout_below="@+id/textView3"
                            android:divider="#00ffb8cb"/>

                        <Button
                            android:layout_width="47dp"
                            android:layout_height="45dp"
                            android:background="@drawable/btn_circle"
                            android:text="%"
                            android:layout_gravity="right"
                            android:textSize="30dp"
                            android:layout_below="@+id/listView3"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:nestedScrollingEnabled="false"
                            android:onClick="waitingToast"/>

                        <Button
                            android:layout_width="47dp"
                            android:layout_height="45dp"
                            android:background="@drawable/btn_circle"
                            android:text="+"
                            android:textSize="30dp"
                            android:layout_gravity="left"
                            android:layout_below="@+id/listView3"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:onClick="addMonthDialog"/>
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>

</android.support.v4.widget.SlidingPaneLayout>
